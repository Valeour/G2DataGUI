<UserControl x:Class="G2DataGUI.UI.Views.Content.Maps"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:G2DataGUI.UI.ViewModels"
             mc:Ignorable="d"
             Focusable="True"
             x:CompileBindings="True"
             x:DataType="vm:MapsViewModel">
	<ListBox Items="{Binding MdtMaps}"
             SelectedIndex="{Binding MapSelectedIndex}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<Border CornerRadius="4"
                        Margin="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ClipToBounds="True" >
					<TextBlock Text="{Binding FileLocation}" />
				</Border>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</UserControl>